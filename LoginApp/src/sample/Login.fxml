<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.LoginController"
          xmlns:fx="http://javafx.com/fxml" prefHeight="300" prefWidth="300" hgap="10" vgap="10">
    <Label fx:id="isConnected" text="Status" textFill="brown">
        <font>
            <Font size="18"/>
        </font>
    </Label>
    <TextField fx:id="username" promptText="User name" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <PasswordField fx:id="password"  promptText="Password" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button onAction="#Login" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="5"></Button>

</GridPane>